{# A macro to render season card. #}
{% macro article_card(season, article, number=false) %}
<div class="mt-8 sm:max-w-md w-full transition ease-in-out hover:scale-105 duration-500 hover:border border-gray-200">
    <a href="/{{ season.slug }}/{{ article.slug }}">
        <div class="relative mx-auto ">
            {% if number %}
            <span class="absolute top-4 right-4 text-white text-xl font-bold" 
                  style="color: #eee; text-shadow: 1px 1px 2px #000">
                No. {{ number }}
            </span>
            {% endif %}
            <img class="z-0 w-full max-h-52 md:max-h-56 object-cover" src="{{ article.cover }}" alt="{{ article.title }}"/>
        </div>
        <div class="m-3 text-xl text-black ">
            <div class="font-bold line-clamp-2">
                {{ article.title }}
            </div>
            <div class="mt-2 text-base text-gray-500">
                {{ article.pub_date }}
            </div>
        </div>
    </a>
</div>
{% endmacro input %}