{% extends "base.jinja" %}

{% block content %}
<div class="p-4 md:p-8 lg:p-12 mx-4 my-6 bg-white 
            shadow-xl shadow-slate-700/10 ring-1 ring-gray-900/5">
    <div class="prose lg:prose-xl mx-auto">
        <h1 class="text-center">{{ season.title }}</h1>
        <p>{{ season.summary }}</p>
    </div>
    <div class="not-prose my-6 mx-auto max-w-sm sm:max-w-md md:max-w-lg">
        {% set length = season.articles | length %}
        {% for article in season.articles | reverse %}
            <a href="{{ season.slug }}/{{ article.slug }}">
                <div class="relative my-8 md:my-16 drop-shadow-xl">
                    <span class="absolute top-4 right-4 text-white text-xl font-bold" 
                          style="color: #eee; text-shadow: 1px 1px 2px #000">No. {{ length - loop.index0 }}</span>
                    <img class="z-0 w-full max-h-52 md:max-h-56 object-cover" src="{{ article.cover }}" alt="{{ article.title }}"/>
                    <div class="absolute w-full bottom-0 p-3 z-10 text-lg text-white bg-black/50">
                        {{ article.pub_date }} {{ article.title }}
                    </div>
                </div>
            </a>
        {% endfor %}
    </div>
</div>
{% endblock content %}