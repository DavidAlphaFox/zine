{% extends "base.jinja" %}

{% block content %}
<div class="p-4 md:p-8 mx-4 my-6 bg-white 
            shadow-xl shadow-slate-700/10 ring-1 ring-gray-900/5">
    <div class="text-2xl text-center m-4">
                <span class="before:block before:absolute before:-inset-1 before:-skew-y-3 before:bg-primary relative inline-block">
                    <div class="first-letter:text-4xl first-letter:font-bold relative text-primary-text px-10">{{ season.title }}</div>
                </span>
            </div>
    <div class="prose mx-auto">
        <p>{{ season.summary }}</p>
    </div>
    
    <div class="flex flex-wrap flex-col sm:flex-row sm:justify-between items-center gap-4">
    {% for article in season.articles %}
        <div class="mt-8 sm:max-w-md w-full mx-auto">
            <a href="/{{ season.slug }}/{{ article.slug }}">
                <div class="relative mx-auto drop-shadow-xl">
                    <span class="absolute top-4 right-4 text-white text-xl font-bold" 
                          style="color: #eee; text-shadow: 1px 1px 2px #000">
                        No. {{ loop.index }}
                    </span>
                    <img class="z-0 w-full max-h-52 md:max-h-56 object-cover" src="{{ article.cover }}" alt="{{ article.title }}"/>
                    <div class="absolute w-full bottom-0 p-3 z-10 text-lg text-white bg-black/50 line-clamp-2">
                        {{ article.pub_date }} {{ article.title }}
                    </div>
                </div>
            </a>
        </div>
    {% endfor %}
</div>
{% endblock content %}