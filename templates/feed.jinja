<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom" xml:lang="en">
    <generator uri="{{ site.url }}" version="0.1.0">{{ site.name }}</generator>
    <link href="{{ site.url }}/feed.xml" rel="self" type="application/atom+xml" />
    <link href="{{ site.url }}" rel="alternate" type="text/html" />
    <id>{{ site.url }}</id>
    <title>{{ site.title }}</title>
    <subtitle>{{ site.description }}</subtitle>
    <author>
        <name>{{ site.name }}</name>
        <uri>{{ site.url }}</uri>
    </author>
    <updated>{{ now() }}</updated>

    {% for entry in entries %}
    <entry>
        <title>{{ entry.title }}</title>
        <link rel="alternate" href="{{ entry.url }}" type="text/html" title="{{ entry.title }}" />
        <published>{{ entry.date }}</published>
        <updated>{{ entry.date }}</updated>
        <id>{{ entry.url }}</id>
        <content type="html" xml:base="{{ entry.url }}">
            {{ markdown_to_html(markdown = entry.content) }}
        </content>

        <author>
            <name>{{ entry.author }}</name>
        </author>
    </entry>
    {% endfor %}
</feed>
